<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
    
    <xacro:include filename="inertial_macros.xacro"/>
    
    <material name="white">
        <color rgba= "1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba= "1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba= "0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba= "0 0 0 1" />
    </material>
    
    <link name= "base_link">
    
    </link>
    <!--CHASSIS LINK-->
    <joint name="chasis_joint" type="fixed">
        <parent link="base_link"/>
        <child  link= "chassis"/>
        <origin xyz="-0.0825 0 0"/>
    </joint>

    <link name= "chassis">
        <visual>
            <origin xyz="0.0825 0 0.05"/>
            <geometry>
                <box size= "0.165 0.121 0.1" /> 
            </geometry>
            <material name= "white"/>
        </visual>

        <collision>
            <origin xyz="0.0825 0 0.05"/>
            <geometry>
                <box size= "0.165 0.121 0.1" /> 
            </geometry>]]]]]]]]]]]]]]]
        </collision>
        
        <xacro:inertial_box mass="0.5" x="0.165" y="0.121" z="0.1">
            <origin xyz="0.0825 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
        
    <gazebo reference="chasis">
        <material>Gazebo/White</material>
    </gazebo>

    
    <!--RUEDA IZQUIERDA TRASERA LINK-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link= "base_link"/>
        <child  link= "left_wheel"/>
        <origin xyz=" -0.0525 0.0775 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name= "left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
            <material name= "blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.034" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">    
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--RUEDA DERECHA LINK-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link= "base_link"/>
        <child  link= "right_wheel"/>
        <origin xyz=" -0.0525 -0.0775 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name= "right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
            <material name= "blue"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.034" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--RUEDA IZQUIERDA DELANTERA LINK-->
    <joint name="left_wheel_forward_joint" type="fixed">
        <parent link= "chassis"/>
        <child  link= "left_wheel_forward"/>
        <origin xyz=" 0.135 0.0775 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name= "left_wheel_forward">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
            <material name= "black"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.034" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="left_wheel_forward">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
    
    <!--RUEDA DERECHA DELANTERA LINK-->
    <joint name="right_wheel_forward_joint" type="fixed">
        <parent link= "chassis"/>
        <child  link= "right_wheel_forward"/>
        <origin xyz=" 0.135 -0.0775 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name= "right_wheel_forward">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
            <material name= "black"/>
        </visual>
        
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.034" /> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.034" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        
    </link>

    <gazebo reference="right_wheel_forward">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>
